{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react-native",
        "checkJs": true,
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}
